<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="5dp">
<ImageView
    android:id="@+id/id_icon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="5dp"
    android:src="@mipmap/ic_launcher"/>
    <FrameLayout
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/id_icon"
        android:id="@+id/id_recorder_length"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/timg">
        <View
            android:id="@+id/id_recorder_anmin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/n3">

        </View>

    </FrameLayout>
    <TextView
        android:textColor="#ff777777"
        android:text=""
       android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:id="@+id/id_recorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/id_recorder_length"/>

</RelativeLayout>