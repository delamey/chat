<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_gravity="left"
        android:id="@+id/left_layout"
        android:layout_width="179dp"
        android:layout_height="67dp"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/id_left_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_launcher"/>
            <FrameLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_left_icon"
                android:id="@+id/id_recorder_length"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                >
                <View
                    android:layout_margin="111dp"
                    android:id="@+id/id_recorder_anmin_left"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/n3">

                </View>
                <TextView
                    android:background="@drawable/btn_recorder_normal"
                    android:textColor="#ff777777"
                    android:text=""
                    android:layout_gravity="center"
                    android:id="@+id/id_recorder_time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </FrameLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="right"
        android:id="@+id/right_layout"
        android:layout_width="179dp"
        android:layout_height="67dp"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/id_right_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_launcher"/>
            <FrameLayout
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/id_right_icon"
                android:id="@+id/id_recorder_length_left"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
               >
                <View

                    android:id="@+id/id_recorder_anmin_right"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/n3">

                </View>
                <TextView
                    android:background="@drawable/btn_recorder_normal"
                    android:textColor="#ff777777"
                    android:text=""
                    android:layout_gravity="center"
                    android:id="@+id/id_recorder_time_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </FrameLayout>


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>